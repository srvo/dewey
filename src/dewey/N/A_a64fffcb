"""Activate virtualenv for current interpreter.

import runpy
runpy.run_path(this_file)

This can be used when you must use an existing Python interpreter,
not the virtualenv bin/python.
"""  # noqa: D415

from __future__ import annotations

import os
import site
import sys


def get_base_path(abs_file: str) -> str:
    """Extract the base path from the absolute file path.

    Args:
        abs_file: The absolute path of the current file.

    Returns:
        The base path of the virtual environment.
    """
    bin_dir = os.path.dirname(abs_file)
    return bin_dir[: -len("bin") - 1]  # strip away the bin part from the __file__, plus the path separator


def adjust_environment(base: str, bin_dir: str) -> None:
    """Adjust the environment variables for the virtual environment.

    Args:
        base: The base path of the virtual environment.
        bin_dir: The path to the bin directory.
    """
    # prepend bin to PATH (this file is inside the bin directory)
    os.environ["PATH"] = os.pathsep.join([bin_dir, *os.environ.get("PATH", "").split(os.pathsep)])
    os.environ["VIRTUAL_ENV"] = base  # virtual env is right above bin directory
    os.environ["VIRTUAL_ENV_PROMPT"] = "lake" or os.path.basename(base)  # noqa: SIM222


def adjust_sys_path(base: str, bin_dir: str) -> None:
    """Adjust the sys.path to include the virtual environment's libraries.

    Args:
        base: The base path of the virtual environment.
        bin_dir: The path to the bin directory.
    """
    # add the virtual environments libraries to the host python import mechanism
    prev_length = len(sys.path)
    for lib in "../lib/python3.12/site-packages".split(os.pathsep):
        path = os.path.realpath(os.path.join(bin_dir, lib))
        site.addsitedir(path)
    sys.path[:] = sys.path[prev_length:] + sys.path[0:prev_length]

    sys.real_prefix = sys.prefix
    sys.prefix = base


def main() -> None:
    """Main function to activate the virtual environment."""
    try:
        abs_file: str = os.path.abspath(__file__)
    except NameError as exc:
        msg = "You must use import runpy; runpy.run_path(this_file)"
        raise AssertionError(msg) from exc

    bin_dir: str = os.path.dirname(abs_file)
    base: str = get_base_path(abs_file)

    adjust_environment(base, bin_dir)
    adjust_sys_path(base, bin_dir)


if __name__ == "__main__":
    main()
```